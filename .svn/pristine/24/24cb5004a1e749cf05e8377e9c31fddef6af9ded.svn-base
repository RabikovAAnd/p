/*----------------------------------------------------------------------------*/
/* Company catalog categories on the start page                               */
/*----------------------------------------------------------------------------*/

.catalog-teaser-container {
  width: auto;
  margin: var(--global-gap) 0;
  display: grid;
  justify-content: space-between;
  /* grid-template-columns: repeat(auto-fill, minmax(400px, 1fr)); */
  grid-template-columns: 1fr 1fr ;
  gap: var(--global-gap);
}

.catalog-teaser-item {
  display: grid;
  grid-template-columns: 38.2% 61.8%;
  grid-gap:0;
  width: 100%;
  text-decoration: none;
  /* align-content: space-evenly; */
  /* align-items: center; */
  /* justify-items: center; */
  /* justify-self: center; */
  border-radius: var(--global-border-radius);
  border: var(--global-border);
}

/* .catalog-teaser-item:hover .catalog-teaser-item-image img {
  animation-duration: 1s;
  animation-iteration-count: 1;
  transform: scale(1.2);
} */

.catalog-teaser-item-subcategories{
  display: flex;
  flex-direction: column;
  gap:calc(var(--global-gap)*0.2);
}

.catalog-teaser-item-subcategories a{

  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.catalog-teaser-item-image {
  /* display: flex;
  align-items: center;
  height: clamp(100px, 13vw, 300px);
  border-bottom: var(--global-border); */
  display: flex;
  margin: var(--global-gap);
  align-items: center;
}

.catalog-teaser-item-image img {
  border-radius: var(--global-border-radius);
  
  width: 100%;
  /* clamp(100px, 11vw, 180px); */
  /* height: 100%; */
  aspect-ratio: 1/1;
  /* clamp(80px, 9vw, 180px); */
  /* margin: clamp(5px, 1vw, 20px); */
  /* transition: 1s; */
  align-self: center;
}

.catalog-teaser-item-headline {
  font-size: var(--global-text-headline-font-size);
  border: none;
  /* padding: var(--global-gap) var(--global-gap); */
  font-weight: bold;
  text-align: right;
  color: var(--global-text-color);
}

.catalog-teaser-item-info{
padding: var(--global-gap);
  border-left: var(--global-border);
  height: auto;
}

.catalog-teaser-item-text {
  display: none;
  border: none;
  padding: 5px;
  text-align: justify;
  font-size: var(--global-text-font-size);
  font-weight: normal;
  color: var(--global-text-color);
}

