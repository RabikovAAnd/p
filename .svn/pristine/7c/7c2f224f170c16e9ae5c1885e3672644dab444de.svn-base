#search_field {
  display: flex;
  flex-direction: column;
  gap: calc(var(--global-text-font-size)*0.3);
  align-items: left;
  width: 100%;
}

#search {
  width: 100%;
  box-sizing: border-box;
}

.main-area {
  display: flex;
  flex-direction: column;
  gap: var(--global-gap);
}

