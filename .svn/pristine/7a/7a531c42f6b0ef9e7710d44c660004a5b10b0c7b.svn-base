<script type="text/javascript"><!--

//------------------------------------------------------------------------------
// Report activity button
//------------------------------------------------------------------------------

$( 'a#project_activity_report_add_button' ).bind( 'click', function() {

  // Get query strings
  var project_id = $( 'input#project_id' ).val();
  var activity_date = $( 'input[name="project_report_activity_date_buttons"]:checked' ).val();
  var activity_hours = $( 'input[name="project_report_activity_hours_buttons"]:checked' ).val();
  var activity_tens = $( 'input[name="project_report_activity_tens_buttons"]:checked' ).val();
  var activity_minutes = $( 'input[name="project_report_activity_minutes_buttons"]:checked' ).val();
  var activity_description = $( 'textarea#project_report_activity_description_input' ).val();

//  alert( project_id + ' - ' + activity_date + ' - ' + activity_hours + ' - ' + activity_tens + ' - ' + activity_minutes + ' - ' + activity_description );

  $.ajax({
    url: 'index.php?route=projects/activity/report/add',
    type: 'post',
    data: 'project_id=' + project_id + '&date=' + activity_date + '&hours=' + activity_hours + '&tens=' + activity_tens + '&minutes=' + activity_minutes + '&description=' + activity_description,
    dataType: 'json',
    success: function( json ) {

alert( json[ 'error' ] );

			// Test for error present
      if ( json[ 'error' ] == true )
      {
      
      	//----------------------------------------------------------------------
      	// ERROR: 
      	//----------------------------------------------------------------------
      	
        var html = '<div class="project-add-results-grid" >';
        html += '<div class="project-add-results-cell">';
        html += json[ 'number' ] + ' : ' + json[ 'name' ];
        html += '</div>';
        html += '<div class="project-add-results-cell">';
        html += '<?php echo $project_add_result_error_text; ?>';
        html += '</div>';
        html += '</div>';

        $( 'div#project-add-results' ).prepend( html );
  	
      }
      else
      {
      
      	//----------------------------------------------------------------------
      	// Time tracking successfull
      	//----------------------------------------------------------------------
      	
        var html = '<div class="project-add-results-grid" >';
        html += '<div class="project-add-results-cell">';
        html += json[ 'number' ] + ' : ' + json[ 'name' ];
        html += '</div>';
        html += '<div class="project-add-results-cell">';
        html += '<?php echo $project_add_result_added_text; ?>';
        html += '</div>';
        html += '</div>';

        $( 'div#project-add-results' ).prepend( html );

        $( 'textarea#project-description-input' ).val('');
      
      }

    }

  });

});

//------------------------------------------------------------------------------

//--></script>

