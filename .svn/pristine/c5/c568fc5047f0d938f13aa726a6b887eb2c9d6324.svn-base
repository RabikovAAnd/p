/*----------------------------------------------------------------------------*/
/* Company news page                                                          */
/*----------------------------------------------------------------------------*/

.news-content-grid
{
  display: grid;
  grid-template-columns: min-content auto;
  /*grid-template-columns: repeat( auto-fit, minmax( min-content, 1fr) );*/
  grid-gap: var(--global-gap);
  border: none;
  text-decoration: none;
}


@media screen and (min-width: 700px) {
  .news-content-grid
  {
    grid-template-columns:  min-content auto;
  }

}

@media screen and (max-width: 700px) {
  .news-content-grid
  {
    grid-template-columns: 1fr;
    margin: 0 var(--global-gap);
  }
}
.news-years-cell
{
  display: grid;
  grid-template-columns: 1fr;
  grid-auto-rows: min-content;
  grid-gap: var(--global-gap);
  text-decoration: none;
}


.news-year-index-button
{
  display: inline-block;
  border: 1px solid var(--global-border-color);
  border-radius: var(--global-border-radius);
  padding: 12px 24px;
  font-size: var(--global-text-headline-font-size);
  font-weight: normal;
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  white-space: nowrap;
}

.news-year-index-button-selected
{
  display: inline-block;
  border: 1px solid var(--global-header-footer-background-color);
  border-radius: var(--global-border-radius);
  padding: 12px 24px;
  background: var(--global-header-footer-background-color);
  font-size:  var(--global-text-headline-font-size);
  font-weight: normal;
  color: var(--global-header-footer-text-color);
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  white-space: nowrap;
}

.news-content-cell
{
  display: flex;
  flex-direction: column;
  border-radius: var( --global-border-radius );
  border: 1px solid var(--global-border-color);
}
.news-content-cell-item{
  display: flex;
  flex-direction: column;
  padding: var(--global-gap);
  border-bottom: 1px solid var(--global-border-color);
  height: 100%;
}
.news-content-cell-item:last-child{
  border-bottom: none;
}


.news-list-message-text
{
  margin: 0px;
  border: none;
  font-size: var(--global-text-font-size);
  font-weight: normal;
}

.news-list-message-headline{
  text-decoration: none;
}
a:hover h2{
  text-decoration: underline;
}
