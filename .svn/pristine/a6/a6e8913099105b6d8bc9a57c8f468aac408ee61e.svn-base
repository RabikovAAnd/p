/*----------------------------------------------------------------------------*/
/* Global variables                                                           */
/*----------------------------------------------------------------------------*/

:root {

  /* Base size */
  --base_size: 14px;

  /* Golden ratio */
  /*
    --golden_ratio_a: 0.61803;
    --golden_ratio_b: 0.38197;
    --golden_ratio_a1: 1.61803;
    --golden_ratio_b1: 1.38197;
*/
  --golden_ratio_a: 0.75;
  --golden_ratio_b: 0.25;
  --golden_ratio_a1: 1.75;
  --golden_ratio_b1: 1.25;

  /* main color */
  --global-text-color: #000000;

  /* font-size settings */
  --global-text-font-size: var(--base_size);
  --global-text-headline-font-size: calc(var(--global-text-font-size) * var(--golden_ratio_b1));
  --global-container-headline-font-size: calc(var(--global-text-font-size) * var(--golden_ratio_a1));

  /* mobile font-size settings */
  --mobile-text-font-size: var(--base_size);
  --mobile-text-headline-font-size: calc(var(--mobile-text-font-size) * 1.1);
  --mobile-container-headline-font-size: calc(var(--mobile-text-headline-font-size) * 1.3);


  /* header-footer colors */
  --global-header-footer-text-color: #ffffff;
  --global-header-footer-background-color: #0000FF;
  --global-header-footer-background-color-hover: rgb(0, 0, 215);
  --global-background-color: rgba(224, 224, 224, 1);
  --global-color-active-button: rgba(255, 103, 37, 1);

  /* border settings */
  --global-border-radius: calc(var(--base_size) * var(--golden_ratio_a));
  --global-border-color: #E0E0E0;
  --global-border-width: 1px;
  --global-border: var(--global-border-width) solid var(--global-border-color);
  --global-gap: calc(var(--base_size) * 1.0)
}

/*----------------------------------------------------------------------------*/
/* Global settings                                                            */
/*----------------------------------------------------------------------------*/

html {
  overflow-y: scroll;
  margin: 0;
  padding: 0;
}

body,
html {
  width: 100%;
  height: 100%;

}

html {
  display: flex;
  flex-direction: column;
  gap: var(--global-gap);
}

body {
  font-family: Open Sans, Arial, Helvetica, sans-serif;
  margin: 0;
  padding: 0;
  font-size: var(--global-text-font-size);
  text-align: justify;
  width: 100%;
  justify-content: space-between;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  gap: 0;
  background-color: #FFFFFF;

}

label input[type=checkbox] {
  align-self: center;
  justify-self: center;
}

h1 {
  margin: var(--global-gap) 0;
  display: flex;
  border: none;
  text-align: right;
  padding: var(--global-gap);
  font-size: var(--global-container-headline-font-size);
  font-weight: normal;
  color: #000000;
  justify-content: end;
  background-color: var(--global-background-color);
  border-radius: var(--global-border-radius);
  border-bottom: 1px solid var(--global-border-color);
}

h2 {
  display: flex;
  font-size: var(--global-text-headline-font-size);
  font-weight: bold;
  justify-content: end;
  margin: 0;

}

h3 {
  display: flex;
  font-size: var(--global-text-font-size);
  font-weight: bold;
  padding: 0;
  justify-content: end;
  margin: var(--global-gap) 0;
}

a {
  cursor: pointer;
  color: var(--global-text-color);
  text-decoration: none;
}

a h1,
a h2,
span a,
label a,
li a {
  text-decoration: underline;
  letter-spacing: -.3px;
  text-underline-offset: 0.21em;
  line-height: 24px;
}

input,
textarea {
  font-family: Open Sans, Arial, Helvetica, sans-serif;
  background: var(--global-background-color);
  width: auto;
  height: auto;
  border: var(--global-border);
  border-radius: var(--global-border-radius);
  padding: var(--global-gap);
  color: var(--global-text-color);
  font-size: var(--global-text-font-size);
  font-weight: normal;
  resize: none;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

::selection {
  background: rgb(255, 103, 37);
  color: #FFFFFF;
}

button {
  height: min-content;
  padding: var(--global-gap);
  text-align: center;
  border: 1px solid var(--global-border-color);
  border-radius: var(--global-border-radius);
  background: var(--global-header-footer-background-color);
  color: var(--global-header-footer-text-color);
  text-decoration: none;
  font-size: var(--global-text-font-size);
  cursor: pointer;
  font-weight: bold;
  width: min-content;
}



ul {
  list-style: none;
}

form {
  padding: 0;
  margin: 0;
  display: inline;
}

select {
  background-color: var(--global-background-color);
  width: auto;
  height: auto;
  border: 1px solid var(--global-border-color);
  border-radius: var(--global-border-radius);
  padding: var(--global-gap);
  color: var(--global-text-color);
  font-size: var(--global-text-font-size);
  font-weight: normal;
  resize: none;
}

select:required:invalid:focus {
  border-color: rgb(255, 103, 37);
}

select option {
  padding: 2px;
}

#container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #FFFFFF;
}

#footer {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  margin-top: var(--global-gap);

}

/* layout */
@media screen and (min-width: 1200px) {
  #container {
    width: 70vw;
    margin-left: auto;
    margin-right: auto;
  }
}

@media screen and (max-width: 1200px) {
  #container {
    width: 100vw;
    margin: 0;
  }
}

@media screen and (min-width: 700px) {
  button {
    white-space: nowrap;
  }
}

@media screen and (max-width: 700px) {
  #container {
    width: 100vw;
    margin: 0;
    min-height: 100vh;
  }

  h1 {
    font-size: var(--mobile-container-headline-font-size);
  }

  h2 {
    font-size: var(--mobile-text-headline-font-size);
  }

  button {
    white-space: normal;
    padding: calc(var(--global-gap)*0.5);
  }
}



/*----------------------------------------------------------------------------*/
/* Common design elements                                                     */
/*----------------------------------------------------------------------------*/


.info-content-block {
  border: var(--global-border);
  border-radius: var(--global-border-radius);
  padding: var(--global-gap);
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.info-text {
  font-weight: normal;
  font-size: var(--global-text-font-size);
  text-align: justify;
}

.date {
  display: flex;
  text-align: right;
  align-self: end;
  margin-top: auto;

}

.input-error {
  border-color: red;
  outline: 1px solid red;
  outline-offset: 0px;
}

.error-alert a {
  color: red;
  text-align: left;
  text-decoration: none;
}

/*----------------------------------------------------------------------------*/
/* Global states                                                              */
/*----------------------------------------------------------------------------*/
.unselectable-text-element {
  -webkit-touch-callout: none;
  /* iOS Safari */
  -webkit-user-select: none;
  /* Safari */
  -khtml-user-select: none;
  /* Konqueror HTML */
  -moz-user-select: none;
  /* Old versions of Firefox */
  -ms-user-select: none;
  /* Internet Explorer/Edge */
  user-select: none;
  /* Non-prefixed version, currently
                                     supported by Chrome, Edge, Opera and Firefox */
}

.unable {
  filter: brightness(105%);
  cursor: not-allowed;
}

/*----------------------------------------------------------------------------*/
/* Location settings                                                          */
/*----------------------------------------------------------------------------*/
.list {
  display: flex;
  flex-direction: column;
  gap: var(--global-gap);
}

.row {
  display: flex;
  flex-direction: row;
  gap: var(--global-gap);
}

.between {
  display: flex;
  justify-content: space-between;
  gap: var(--global-gap);
}
.end {
  display: flex;
  flex-direction: row;

  justify-content: end;
  gap: var(--global-gap);

}


/*----------------------------------------------------------------------------*/
/* Header settings                                                            */
/*----------------------------------------------------------------------------*/
/* Header colors */
.orange-header-text {
  color: #ffffff;
  background-color: rgb(255, 131, 78);
}

.cyan-header-text {
  color: #ffffff;
  background-color: rgb(78, 199, 255);
}

.red-header-text {
  color: #ffffff;
  background-color: #e42c2c;
}

.green-header-text {
  color: #ffffff;
  background-color: #2ab600;
}

/*----------------------------------------------------------------------------*/
/* Button settings                                                            */
/*----------------------------------------------------------------------------*/
/* Common settings */
.button {
  font-size: var(--global-text-font-size);
  height: min-content;
  text-align: center;
  padding: var(--global-gap) 0;
  text-decoration: none;
  cursor: pointer;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  white-space: normal;
}

.button-link {
  width: min-content;
}

button:hover {
  background: var(--global-header-footer-background-color-hover);
}

/* Button size */
.small-button {
  padding: calc(var(--global-gap)*0.85);
  font-size: calc(var(--global-text-font-size)*0.85);
  font-weight: normal;
}

/* Button colors */
.active-button {
  background-color: var(--global-color-active-button);
  color: #FFFFFF;
  border-radius: var(--global-border-radius);
}

.active-button:hover {
  background: var(--global-header-footer-background-color-hover);
}

.inactive-button {
  border: var(--global-border);
  border-radius: var(--global-border-radius);
  background-color: var(--global-header-footer-text-color);
  color: #5b5b5b;
}

.inactive-button:hover {
  background: var(--global-header-footer-text-color);

}

.red-button {
  border: var(--global-border);
  border-radius: var(--global-border-radius);
  background-color: #ce0000;
  color: #FFFFFF;

}

.red-button:hover {
  background: #830202;
}

.green-button {
  border: var(--global-border);
  border-radius: var(--global-border-radius);
  background-color: #00c400;
  color: #FFFFFF;
}

.green-button:hover {
  background: #016d01;
}

/* Quantity buttons */
.item__quantity-button {
  align-items: center;
  justify-content: center;
  background-color: var(--global-background-color);
  padding: 0;
  border: var(--global-border);
  width: 150px;
  text-align: center;
  border-radius: var(--global-border-radius);
}

.item__quantity-button button {
  border: none;
  border-radius: calc(1em + var(--global-border-radius) * 3);
  background-color: var(--global-background-color);
  padding: calc(var(--global-gap) * 0.5);
  font-size: var(--global-text-headline-font-size);
  margin: 0;
}

.item__quantity-button input {
  font-size: var(--global-text-headline-font-size);
  margin: 0;
  padding: var(--global-gap);
  border: none;
  text-align: center;
  width: clamp(40px, 1vw, 280px);
  height: 10px;
  justify-self: center;
}

