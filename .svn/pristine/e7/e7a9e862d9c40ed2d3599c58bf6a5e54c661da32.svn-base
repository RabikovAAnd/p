/*============================================================================*/
/* Products subsystem                                                         */
/*============================================================================*/

/*----------------------------------------------------------------------------*/
/* Product info                                                              */
/*----------------------------------------------------------------------------*/

a {
    text-decoration: underline;
}

.item {
    display: grid;
    grid-template-columns: 1fr 2fr;
    padding: 0;
}

.item__image {
    width: 100%;
}
.item__image img{
    padding: var(--global-gap);
    justify-self: center;
    width: calc(100% - 2 * var(--global-gap));
    min-width: 160px;
    min-height: 150px;
    border-bottom: var(--global-border);

}
.item__info{
    margin: 0;
    display: flex;
    flex-direction: column;
    border-left: var(--global-border);
}

.short-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.item__amount-info{
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: var(--global-gap);
    text-align: right;
}

ul{
    padding: 0;
}

.files{
    padding: var(--global-gap);
}
.content-elem{
    border-bottom: var(--global-border);
    padding: var(--global-gap);
}
.content-elem h3:nth-child(1){
    margin: 0;
}
.content-elem:last-child{
    border-bottom: none;
}

@media screen and (max-width: 700px) {
    .item {
        display: flex;
        flex-direction: column;
    }
    .short-info {
        display: flex;
        flex-direction: column;
    }
    .item__amount-info{
        display: flex;
        flex-direction: column;
        gap: var(--global-gap);
margin-top: var(--global-gap);
    }
    .item__quantity-button{
        align-self: center;
    }
    .item__cart-sum{
        align-items: center;
    }
    .item__amount-info button{
        align-self: center;
        width: max-content;
    }
    .item__image img{

        min-width: 10px;
        min-height: 10px;

    }
}